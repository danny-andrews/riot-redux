{
  "maxerr": 50,

  // Enforcing
  "bitwise": false,
  "eqeqeq": true,
  "forin": true,
  "freeze": true,
  "futurehostile": true,
  "latedef": true,
  "noarg": true,
  "nocomma": true,
  "nonbsp": true,
  "nonew": true,
  "undef": true,
  "unused": true,
  "varstmt": true,
  "boss": true,

  // Code Quality
  "maxdepth": 4,
  "maxcomplexity": 10,

  // Exceptions
  "expr": true, // For chai (bdd)

  // Environment
  "esversion": 6,
  "browser": true,
  "node": true,
  "devel": true,
  "mocha": true
}
